# Harmony Backend Environment Configuration
# Copy to .env and customize

# Server
HARMONY_HOST=127.0.0.1
HARMONY_PORT=8000
HARMONY_DEBUG=true

# Redis (for ARQ task queue)
HARMONY_REDIS_URL=redis://localhost:6379/0

# Audio Processing
HARMONY_SAMPLE_RATE=22050
HARMONY_MAX_AUDIO_DURATION_SECONDS=600

# ML Models
HARMONY_ONNX_DEVICE=auto

# Processing
HARMONY_MAX_WORKERS=4
HARMONY_ENABLE_SEPARATION=true
HARMONY_ENABLE_EXTENDED_ANALYSIS=true

# Cache
HARMONY_CACHE_MAX_SIZE_GB=5.0
