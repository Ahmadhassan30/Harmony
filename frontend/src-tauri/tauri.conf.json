{
    "productName": "Harmony",
    "version": "0.1.0",
    "identifier": "com.harmony.audioengine",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "title": "Harmony",
        "windows": [
            {
                "title": "Harmony â€” Audio Analysis Engine",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "minWidth": 800,
                "minHeight": 600,
                "decorations": true,
                "transparent": false
            }
        ],
        "security": {
            "csp": "default-src 'self'; connect-src 'self' http://localhost:8000 ws://localhost:8000; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}